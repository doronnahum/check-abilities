{
  "name": "user-permissions",
  "version": "0.4.1",
  "description": "Small authorization library for NodeJS and browser",
  "license": "MIT",
  "scripts": {
    "start": "tsdx watch",
    "build": "npm run lint && tsdx build",
    "test": "tsdx test --collectCoverage",
    "test-with-coverage": "tsdx test --coverage && cat ./coverage/lcov.info | codacy-coverage",
    "lint": "tsdx lint",
    "format": "tsdx lint --fix",
    "prepare": "npm run test && tsdx build"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/doronnahum/user-permissions.git"
  },
  "keywords": [
    "access control",
    "authorization",
    "acl",
    "cancan",
    "rabc",
    "security",
    "permissions",
    "nodejs",
    "browser"
  ],
  "author": "Doron Nahum <doron.nahum@gmail.com>",
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/user-permissions.esm.js",
  "devDependencies": {
    "@types/clone": "^2.1.0",
    "@types/dot": "1.1.4",
    "@types/jest": "^26.0.15",
    "@types/pick-deep": "1.0.0",
    "@types/strikeentco__get": "^1.0.1",
    "clone": "2.1.2",
    "codecov": "^3.8.1",
    "husky": "4.3.0",
    "tsdx": "^0.14.1",
    "tslib": "2.0.3",
    "tslint": "^6.1.3",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "4.0.5",
    "@types/mocha": "^8.0.3"
  },
  "dependencies": {
    "@strikeentco/get": "^1.0.1",
    "pick-deep": "1.0.0",
    "sift": "^13.5.2"
  }
}
